{{#section 'header'}}
    <title>LayerTech</title>
    <!-- CSS -->
    <link rel="stylesheet" href="/public/css/login.css">
{{/section}}

<div>
    <p>Hello World</p>
<div class="container" >
    <div class="full-wrapper">
        <div class="login-box">
            <img src="public/assets/nature.svg" style="max-width:280px; height:auto">
            <p>LayerTech</p>
            <span name="description">An inventory and stock management web application for your farm by Qualiprime</span>
            <form name="login">
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <img src="/public/assets/user.svg" alt="email field" height="24" width="24"/>
                        </span>
                    </div>
                    <input type="email" class="form-control" placeholder="Email">
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <img src="/public/assets/password.svg" alt="password field" height="24" width="24"/>
                        </span>
                    </div>
                    <input type="password" class="form-control" placeholder="Password">
                </div>
                <div>
                    <a href="./home"><button type="submit" id="sign-in-btn" class="btn prim-btn" >Sign In</button></a>
                    <a href="#" data-toggle="modal" data-target="#register-modal">
                        <span>I don't have an account</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

